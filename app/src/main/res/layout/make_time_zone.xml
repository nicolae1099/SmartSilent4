<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When do you want to silence your phone?"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/button_toggle_group_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_day_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_day_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_day_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_day_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_day_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_day_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_day_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat" />

            </com.google.android.material.button.MaterialButtonToggleGroup>


        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/button_toggle_group_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316"

        app:singleLine="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_select_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_select_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:chipSpacingHorizontal="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:singleLine="true">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_hour_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_hour_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_hour_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_hour_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:00" />


    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635"
        app:singleLine="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="05:00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="06:00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="07:00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="08:00" />
        </LinearLayout>

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_5"
        android:weightSum="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767"
        app:singleLine="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="09:00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10:00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11:00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hour_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12:00" />
        </LinearLayout>

    </com.google.android.material.chip.ChipGroup>


</androidx.constraintlayout.widget.ConstraintLayout>